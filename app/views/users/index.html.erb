<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">マジシャン一覧</th>
            <th scope="col">　</th>
            <th scope="col">　</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :profile_image, size: '100x100', fallback: "no_image.png", class: "mb-3 mt-3 ml-3 profile-img" %>
                <% end %>
              </td>
              
              <td><h3><%= link_to user.name, user_path(user) %></h3></td>
              <td>投稿数：<%= user.records.count %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </div>
  </div>

 
  

  
  
  
  