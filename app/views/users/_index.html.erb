<section class="container">
<div class="row row-cols-3 row-cols-sm-2 g-3">
<% users.each do |user| %>
<div class="container my-5 col">
<div class="card">
  <div class="row g-0">
    <div class="col-5 col-sm-4 mt-3">
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :profile_image, fallback: "no_image.png", class: "card-img-top" %>
      <% end %>
    </div>
    <div class="col-7 col-sm-8">
      <div class="card-body">
        <h5 class="card-title"><%= link_to user.name, user_path(user) %></h5>
        <p class="card-text"><%= user.profile %></p>
        <p class="card-text"><small class="text-muted">投稿数：<%= user.records.count %></small></p>
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
</div>
</section>