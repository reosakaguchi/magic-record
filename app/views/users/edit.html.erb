<%= render 'layouts/errors', model: @user %>

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>編集</h2>
      <%= form_for @user do |f| %>
      <div class="form-group">
        <label>ユーザー名</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>メールアドレス</label>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>プロフィール</label>
        <%= f.text_area :profile, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>プロフィール画像</label>
        <%= f.attachment_field :profile_image, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>性別</label><br />
        <%= f.select :gender_status, User.gender_statuses.keys.map { |k| [t("enums.user.gender_status.#{k}"),k]}, {}, {class: "custom-select w-25"} %>
      </div>
      
      <%= f.submit class: "btn btn-success" %>
      <% end %>
  </div>
</div>