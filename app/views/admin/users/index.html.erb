<section class="container my-5">
  <div class="text-center">
    <h2>ユーザー情報管理画面</h2>
  </div>
</section>

<section class="container my-5">
<ul class="list-group list-group-flush">
<% @users.each do |user| %>
<li class="list-group-item">
<div class="card">
  <div class="col-sm-1 mt-3">
    <%= link_to user_path(user) do %>
      <%= attachment_image_tag user, :profile_image, fallback: "no_image.png", class: "card-img-top" %>
    <% end %>
  </div>
  <div class="card-body d-flex">
    <h5 class="card-title"><%= link_to user.name, user_path(user) %></h5>
    <p class="card-text"><small class="text-muted">&emsp;投稿数：<%= user.records.count %></small></p>
    <div class="comment-delete">
      <% if user.admin == false %>
        <%= link_to '削除', user_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"} %>
      <% end %>
    </div>
  </div>
</div>
</li>
<% end %>
</ul>
</section>