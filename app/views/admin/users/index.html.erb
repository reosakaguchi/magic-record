<section class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>管理者用画面</h2>
    </div>
  </div>
</section>
<section class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">マジシャン一覧</th>
            <th scope="col">　</th>
            <th scope="col">　</th>
            <th scope="col">　</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag user, :profile_image, size: '100x100', fallback: "no_image.png", class: "mb-3 mt-3 ml-3 profile-img" %>
                <% end %>
              </td>
              <td><h3><%= link_to user.name, user_path(user) %></h3></td>
              <td>投稿数：<%= user.records.count %></td>
              <td>
                <% if current_user.admin == true %>
                  <%= link_to '削除', user_path(user), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか？"} %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </div>
  </section>