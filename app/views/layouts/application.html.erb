<!DOCTYPE html>
<html>
  <head>
    <title>MagicRecord</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/484e6509e8.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to 'magic_record', root_path, class: "navbar-brand" %>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarWithDropdown" aria-controls="navbarWithDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <% if user_signed_in? %>
        <div class="collapse navbar-collapse show" id="navbarWithDropdown">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to '投稿一覧', records_path, class: "nav-link" %>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-expanded="false">
                管理者記事 <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <li><%= link_to 'サークル内報告', information_articles_path, class: "dropdown-item" %></li>
                <li><%= link_to 'マジックについて', learning_articles_path, class: "dropdown-item" %></li>
                <li><%= link_to 'Ｑ＆A', qanda_articles_path, class: "dropdown-item" %></li>
                <li><%= link_to '管理者記事一覧', articles_path, class: "dropdown-item" %></li>
              </ul>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'マジシャン一覧', users_path, class: "nav-link " %>
            </li>
            <li class="nav-item">
              <%= link_to 'マイページ', user_path(current_user.id), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '新規投稿', new_record_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="collapse navbar-collapse" id="Navber">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to '投稿一覧', records_path, class: "nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to 'ログイン', new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to '新規登録', new_user_registration_path, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>
    <div id="flash-message">
      <%= render 'layouts/flash' %>
    </div>
    <%= yield %>
  </body>
</html>
