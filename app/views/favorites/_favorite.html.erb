<% if record.favorited_by?(current_user) %>
  <%= link_to record_favorites_path(record), method: :delete, remote: true, class: "favorite_btn" do %>
    <i class="fas fa-heart"></i>
    <%= record.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to record_favorites_path(record), method: :post, remote: true, class: "favorite_btn" do %>
    <i class="far fa-heart"></i>
    <%= record.favorites.count %> いいね
  <% end %>
<% end %>