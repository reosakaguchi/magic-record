<div class="container mt-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">マジックレポート一覧</th>
            <th scope="col">投稿者</th>
            <th scope="col">　</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |record| %>
            <tr>
              <td><%= link_to record.magic_name, record_path(record) %></td>
              <td><%= link_to record.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </div>
    </div>
  </div>