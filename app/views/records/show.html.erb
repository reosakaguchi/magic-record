<%= render 'layouts/errors', model: @comment %>

<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title"><%= @record.title %></h4>
          <p class="card-text">
            <small class="text-muted">使用したマジック：<%= @record.magic_name %></small>
          </p>
          <p class="card-text">
            <small class="text-muted">投稿者：<%= @record.user.name %> (<%= @record.user.gender_status_i18n %>)　｜　演技時間：<%= @record.time_status_i18n %>　｜　演じた相手：<%= @record.audience_status_i18n %></small>
          </p>
          <p class="card-text"><%= @record.body %></p>
          <p class="card-text">
            <small class="text-muted">更新日：<%= @record.updated_at.strftime("%Y-%m-%d") %></small>
          </p>
          <div id="favorite_btn_<%= @record.id %>">
            <%= render 'favorites/favorite', record: @record %>
          </div>

          <% if @record.user == current_user %>
            <%= link_to '編集', edit_record_path(@record), class: "btn btn-success" %>
            <%= link_to '削除', record_path(@record), method: :delete, class: "btn btn-danger" %>
          <% end %>
            <div class="comments ml-5 mt-5">
              <%= form_with(model:[@record, @comment], local: true) do |f| %>
              <%= f.text_area :comment, :size=>"60x3",placeholder: "コメントする" %>
              <%= f.submit "送信する", class: "btn btn-success mb-4" %>
              <% end %>
              <div class="text-secondary">
                <p>コメント件数：<%= @comments.count %></p>
              </div>
              <% @comments.each do |comment| %>
      	      <div class="comments-index mb-2">
      	          <div class="text-secondary">
                    <%= comment.user.name %>
                    <%= comment.created_at.strftime('%Y/%m/%d') %><br>
      	          </div>
                <div class="d-flex">
                  <%= comment.comment %>
                  <% if comment.user == current_user %>
                  <div class="comment-delete">
                    <%= link_to "削除", record_comment_path(comment.record, comment), method: :delete, class: "btn-sm btn-danger" %>
                  </div>
                  <% end %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>