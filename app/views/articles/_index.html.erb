<div class="row row-cols-3 row-cols-sm-3 g-3">
  <% @articles.reverse_each do |article| %>
    <div class="container mt-5 col">
      <div class="card">
        <%= link_to article_path(article) do %>
          <%= attachment_image_tag article, :article_image, fallback: "no_image.png", class: "card-img-top" %>
        <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <div class="row">
            <p class="card-text col-5">
              <small class="text-muted"><%= article.article_status_i18n %></small>
            </p>
            <p class="card-text col-7">
              <small class="text-muted"><i class="far fa-comment-dots"></i><%= " #{article.remarks.count} コメント" %></small>
            </p>
            </div>
            <p class="card-text">
              <small class="text-muted">更新日：<%= article.updated_at.strftime("%Y-%m-%d") %></small>
            </p>
          </div>
      </div>
    </div>
  <% end %>
</div>