<%= form_for article do |f| %>
  <div class="form-group">
    <label>何のカテゴリーですか？</label><br>
    <%= f.select :article_status, Article.article_statuses.keys.map { |k| [t("enums.article.article_status.#{k}"),k]}, {}, {class: "custom-select w-25"} %>
  </div>
  <div class="form-group">
  <label>タイトル</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <label>本文</label>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div>
    <%= f.submit '投稿する', class: "btn btn-success" %>
  </div>
<% end %>